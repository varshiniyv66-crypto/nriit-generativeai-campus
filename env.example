# ===========================================
# NRIIT Digital University Platform
# Environment Variables Template
# ===========================================

# ----- SUPABASE CONFIGURATION -----
# Primary data store: ERP, CMS, Accreditation, Analytics
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ----- FIREBASE CONFIGURATION -----
# Used for: Phone Auth, FCM, Storage, Realtime
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin (server-side)
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----"

# ----- PAYMENT GATEWAYS -----
# Razorpay (NO EMI - as per requirements)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret

# Cashfree (NO EMI - as per requirements)
CASHFREE_APP_ID=your-cashfree-app-id
CASHFREE_SECRET_KEY=your-cashfree-secret

# ----- AI CONFIGURATION -----
# Gemini API
GEMINI_API_KEY=your-gemini-api-key

# OpenAI Compatible API (ChatGPT)
OPENAI_API_KEY=your-openai-api-key

# ----- APPLICATION SETTINGS -----
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="NRI Institute of Technology"
NEXT_PUBLIC_APP_SHORT_NAME="NRIIT"

# Institution Details
NEXT_PUBLIC_INSTITUTION_CODE=NRIIT
NEXT_PUBLIC_INSTITUTION_LOCATION="Vijayawada, Andhra Pradesh, India"

# ----- ACADEMIC SETTINGS -----
# Assumption: 8 periods per day (as per requirements)
NEXT_PUBLIC_PERIODS_PER_DAY=8
# Assumption: 75-80% attendance rule
NEXT_PUBLIC_MIN_ATTENDANCE_PERCENT=75
# Assumption: 2 internals per semester
NEXT_PUBLIC_INTERNALS_PER_SEMESTER=2

# ----- FILE UPLOAD SETTINGS -----
NEXT_PUBLIC_MAX_FILE_SIZE_MB=10
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
NEXT_PUBLIC_ALLOWED_DOC_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx

# ----- SESSION SETTINGS -----
SESSION_SECRET=your-super-secret-session-key-min-32-chars
